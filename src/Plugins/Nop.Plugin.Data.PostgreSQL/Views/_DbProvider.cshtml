@model InstallModel
@*@using System.Text.Encodings.Web*@
@*@using Nop.Core.Data*@
@*@using Nop.Data*@
@using Nop.Web.Models.Install
@using Nop.Web.Infrastructure.Installation
@using Nop.Plugin.Data.PostgreSQL
@*@using Microsoft.AspNetCore.Mvc.ViewFeatures;*@
@*@using Microsoft.AspNetCore.Razor.TagHelpers;*@
@*localization service for installation service
    we do not use standard nopCommerce localization because database is not installed yet
    locale resources for installation process are stored into \App_Data\Localization\Installation directory*@
@inject IInstallationLocalizationService ILS

<div class="radio provider_postgresql" >
    <label>
        <input asp-for="DataProvider" value="PostgreSQLDataProvider" type="radio" id="provider_postgresql" />
        @ILS.GetResource("PostgreSql") @*<strong>@ILS.GetResource("Recommended")</strong>   "postgresql"*@
    </label>
</div>

