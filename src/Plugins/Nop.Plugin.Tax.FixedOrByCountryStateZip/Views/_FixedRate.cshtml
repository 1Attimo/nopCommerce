@model Nop.Plugin.Tax.FixedOrByCountryStateZip.Models.ConfigurationModel

<div class="panel-group basic-setting">
    <div class="panel panel-default">
        <div class="panel-body">
            <div id="tax-categories-grid"></div>
            <script>
                $(document)
                    .ready(function() {
                        $("#tax-categories-grid")
                            .kendoGrid({
                                dataSource: {
                                    type: "json",
                                    transport: {
                                        read: {
                                            url:
                                                "@Html.Raw(Url.Action("FixedRatesList", "FixedOrByCountryStateZip"))",
                                            type: "POST",
                                            dataType: "json",
                                            data: addAntiForgeryToken
                                        },
                                        update: {
                                            url:
                                                "@Html.Raw(Url.Action("FixedRateUpdate", "FixedOrByCountryStateZip"))",
                                            type: "POST",
                                            dataType: "json",
                                            data: addAntiForgeryToken
                                        }
                                    },
                                    schema: {
                                        data: "Data",
                                        total: "Total",
                                        errors: "Errors",
                                        model: {
                                            id: "TaxCategoryId",
                                            fields: {
                                                TaxCategoryId: { editable: false, type: "number" },
                                                TaxCategoryName: { editable: false, type: "string" },
                                                Rate: { editable: true, type: "number" }
                                            }
                                        }
                                    },
                                    requestEnd: function(e) {
                                        if (e.type == "update") {
                                            this.read();
                                        }
                                    },
                                    error: function(e) {
                                        display_kendoui_grid_error(e);
                                        // Cancel the changes
                                        this.cancelChanges();
                                    },
                                    serverPaging: true,
                                    serverFiltering: true,
                                    serverSorting: true
                                },
                                pageable: {
                                    refresh: true,
                                    numeric: false,
                                    previousNext: false,
                                    info: false,
                                    @await Html.PartialAsync("~/Areas/Admin/Views/Shared/_GridPagerMessages.cshtml")
                                },
                                editable: {
                                    confirmation: "@T("Admin.Common.DeleteConfirmation")",
                                    mode: "inline"
                                },
                                scrollable: false,
                                columns: [
                                {
                                    field: "TaxCategoryName",
                                    title: "@T("Plugins.Tax.FixedOrByCountryStateZip.Fields.TaxCategoryName")",
                                    width: 400
                                }, {
                                    field: "Rate",
                                    title: "@T("Plugins.Tax.FixedOrByCountryStateZip.Fields.Rate")",
                                    width: 200,
                                    editor: function(container, options) {
                                        $('<input name="' + options.field + '"/>')
                                            .appendTo(container)
                                            .kendoNumericTextBox({
                                                format: "{0:n4}",
                                                decimals: 4
                                            });
                                    }
                                }, {
                                    command: {
                                        name: "edit",
                                        text: {
                                            edit: "@T("Admin.Common.Edit")",
                                            update: "@T("Admin.Common.Update")",
                                            cancel: "@T("Admin.Common.Cancel")"
                                        }
                                    },
                                    title: "@T("Admin.Common.Edit")",
                                        width: 150
                                    }
                                ]
                            });
                    });
            </script>

            <div class="form-group">
                <div class="col-md-3">
                    <nop-label asp-for="ShippingTaxDependsOnShoppingCart" />
                </div>
                <div class="col-md-9">
                    <nop-editor asp-for="ShippingTaxDependsOnShoppingCart" />
                    <span asp-validation-for="ShippingTaxDependsOnShoppingCart"></span>
                </div>
            </div>
            <script>
                $(document).ready(function() {
                    $("#@Html.IdFor(model => model.ShippingTaxDependsOnShoppingCart)").click(function() {
                        $.ajax({
                            cache: false,
                            url: '@Url.Action("SaveShippingTaxDependsOnShoppingCart")',
                            type: 'POST',
                            data: { value: ($('#@Html.IdFor(model => model.ShippingTaxDependsOnShoppingCart)').is(':checked')) },
                            error: function(xhr, ajaxOptions, thrownError) {
                                alert('Failed to save settings');
                            }
                        });
                    });
                });
            </script>
        </div>
    </div>
</div>